  <script>
    function adjustheight(){
      var footerHeight = $(".myfooter").outerHeight();
      var navHeight = $(".header").outerHeight();
      var vheight =  $(document).innerHeight();
      var blogminheight = vheight - footerHeight - navHeight;

      $(".blog").css("min-height", blogminheight.toString() +"px");
      $("#sidenavforpage").css("top", navHeight.toString()+"px");
    }


    window.onload = adjustheight;

    function openDropDown(element){      
      if ($(element).hasClass("showsubmenu")){
        $(element).removeClass("showsubmenu");
      }else{
        $(".navitem").removeClass("showsubmenu");
        $(element).addClass("showsubmenu");
      }
    }

    function showMenu() {
      const x = document.getElementById("navlinkid");
      if (x.className === "navlinks") {
        x.className += " showmenu";
      } else {
        x.className = "navlinks";
      }
  
      }
    </script>
